#include <stdio.h>
#include <stdlib.h>
#include<time.h>
#include <mpi.h>
#define sz 2000	

int A[sz][sz], B[sz][sz], C[sz][sz];

void print_matrix(int m[sz][sz])
{
  int i, j = 0;
  for (i = 0; i < sz; i++) {
    printf("\n\t| ");
    for (j = 0; j < sz; j++)
      printf("%2d ", m[i][j]);
    printf("|");
  }
}

void fill_matrix(int m[sz][sz])
{
  static int n=0;
  int i, j;
  for (i = 0; i < sz; i++)
    for (j = 0; j < sz; j++)
      m[i][j] = i + j;
}

int main(int argc, char *argv[])
{
  int myrank, P, from, to, i, j, k;
  int tag = 666;	
  MPI_Status status;

  MPI_Init (&argc, &argv);
  MPI_Comm_rank(MPI_COMM_WORLD, &myrank);
  MPI_Comm_size(MPI_COMM_WORLD, &P); 

  if (sz%P!=0) {
    if (myrank==0) printf("Matrix size not divisible by number of processors\n");
    MPI_Finalize();
    exit(-1);
  }

  from = myrank * sz/P;
  to = (myrank+1) * sz/P;



  if (myrank==0) {
    fill_matrix(A);
    fill_matrix(B);
  }

  MPI_Bcast (B, sz*sz, MPI_INT, 0, MPI_COMM_WORLD);
  MPI_Scatter (A, sz*sz/P, MPI_INT, A[from], sz*sz/P, MPI_INT, 0, MPI_COMM_WORLD);

  time_t start, end;

  time(&start);

  printf("computing slice %d (from row %d to %d)\n", myrank, from, to-1);
  printf("\n");
  for (i=from; i<to; i++)
    for (j=0; j<sz; j++) {
      C[i][j]=0;
      for (k=0; k<sz; k++)
	C[i][j] += A[i][k]*B[k][j];
    }

  MPI_Gather (C[from], sz*sz/P, MPI_INT, C, sz*sz/P, MPI_INT, 0, MPI_COMM_WORLD);

  time(&end);

  if (myrank==0) {
    printf("\n\n");
    print_matrix(A);
    printf("\n\n\t       * \n");
    print_matrix(B);
    printf("\n\n\t       = \n");
    print_matrix(C);
    printf("\n\n");
  }
  printf("Time taken: %f", difftime(end, start));

  MPI_Finalize();
  return 0;
}
